@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActionName</title>
</head>
<body>
    <div>The controller is: @ViewBag.Controller</div>
    <div>The action is: @ViewBag.Action</div>
    <div>
        @Html.ActionLink("This is an outgoing URL", "CustomVariable")
    </div>
    <div>
        @Html.ActionLink("This targets another Index/Admin", "Index", "Admin")
    </div>
    <div>
        @Html.ActionLink("This targets another Index/Customer", "Index", "Customer")
    </div>
    <div>
        @Html.ActionLink("This is an outgoing URL", "CustomVariable", new { id = "Hello"})
    </div>
    <div>
        @Html.ActionLink("This is an outgoing URL", "Index", "Home", null, new { id = "myAndchroID", @class = "myCSSClass"})
    </div>
    <div>
        @Html.ActionLink("This is a fully qualified outgoing URL", "Index", "Home", "https", "myserver.mydomain.com", " myFragmentName",
            new { id = "MyId"}, new { id = "myAnchorID", @class = "myCSSClass"})
    </div>
    <div>
        This is a URL:
        @Url.Action("Index", "Home", new { id = "MyId"})
    </div>
</body>
</html>